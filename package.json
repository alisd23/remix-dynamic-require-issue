{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./build/server.js",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "express": "^4.18.2",
    "react": "^18.*",
    "react-dom": "^18.*"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.5",
    "@types/express": "^4.17.14",
    "@types/react": "^18.*",
    "@types/react-dom": "^18.*",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
